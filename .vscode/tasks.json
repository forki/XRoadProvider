{
    "version": "0.1.0",
    "windows": {
        "command": "msbuild"
    },
    "linux": {
        "command": "xbuild"
    },
    "taskSelector": "/t:",
    "showOutput": "silent",
    "tasks": [
        {
            "taskName": "build",
            "problemMatcher": "$msCompile",
            "args": [
                "/p:Configuration=Debug"
            ]
        },
        {
            "taskName": "rebuild",
            "problemMatcher": "$msCompile",
            "args": [
                "/p:Configuration=Debug",
                "/t:Rebuild"
            ]
        }
    ]
}
